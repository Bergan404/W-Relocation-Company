---
import Contact from "../components/Contact.astro";
import Partners from "../components/Partners.astro";
import Services from "../components/Services.astro";
import SvgIconItem from "../components/SvgIconItem.astro";
import Layout from "../layouts/Redesign.astro";
import ContactForm from "../components/extras/contact_form.astro";
import Testimonials from "../components/Testimonials.astro";
import SuccessStories from "../components/SuccessStories.astro";
import PercentageCounter from "../components/PercentageCounter.astro";
import EnterpriseSolutions from "../components/EnterpriseSolutions.astro";
---

<Layout title="W Relocation Company">
	 <!-- Navigation -->
    <header id="header">
        <nav class="navbar">
            <div class="logo">
                <span>W</span>Relocation
            </div>
            <div class="nav-links" id="navLinks">
                <a href="#home" class="active">Home</a>
                <a href="#benefits">Benefits</a>
                <a href="#solutions">Solutions</a>
                <a href="#calculator">Calculator</a>
                <!-- <a href="#case-studies">Case Studies</a> -->
                <a href="#contact">Contact</a>
            </div>
            <div class="cta-container">
                <a href="#demo" class="nav-cta">Request Demo</a>
                <div class="menu-toggle" id="menuToggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="hero-content">
            <h1>Transform Your <span>Employee Relocation</span> Experience</h1>
            <p>Seamless transitions, significant savings, and superior support for your team</p>
            <div class="hero-cta">
                <a href="#calculator" class="primary-btn">Try Our Calculator</a>
                <!-- <a href="#solutions" class="secondary-btn">Explore Solutions</a> -->
            </div>
        </div>
        <div class="hero-image">
            <img src="https://placehold.co/600x400/6DBE45/fff?text=Relocation+Made+Simple" alt="Relocation Made Simple">
        </div>
        <div class="scroll-indicator">
            <div class="mouse"></div>
            <p>Scroll to explore</p>
        </div>
    </section>

    <!-- Stats Section -->
	<!-- <PercentageCounter /> -->
    

    <!-- Benefits Section -->
    <section id="benefits" class="benefits-section">
        <div class="section-header">
            <h2>Why Choose <span>W Relocation</span></h2>
            <p>Comprehensive benefits that transform the relocation experience</p>
        </div>
        <div class="benefits-container">
            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3>Significant Savings</h3>
                <p>Our cash rebate program puts money back in your employees' pockets, with rebates up to $5,000 per transaction.</p>
                <a href="#calculator" class="benefit-link">Calculate Savings</a>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-globe-americas"></i>
                </div>
                <h3>Nationwide Network</h3>
                <p>Access to top real estate professionals across all 50 states, ensuring quality service no matter the location.</p>
                <a href="#" class="benefit-link">View Coverage</a>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-handshake"></i>
                </div>
                <h3>Full-Service Support</h3>
                <p>Comprehensive assistance with real estate, mortgages, and title services for a seamless relocation experience.</p>
                <a href="#solutions" class="benefit-link">Learn More</a>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Retention Boost</h3>
                <p>Enhance your benefits package with relocation perks that improve employee satisfaction and retention.</p>
                <a href="#case-studies" class="benefit-link">See Results</a>
            </div>
        </div>
    </section>

    <!-- Solutions Section -->
    <!-- <EnterpriseSolutions /> -->

    <!-- Comparison Section -->
    <section class="comparison-section">
        <div class="section-header">
            <h2>The <span>W Relocation</span> Advantage</h2>
            <p>See how our solution compares to traditional relocation programs</p>
        </div>
        <div class="comparison-table-container">
            <table class="comparison-table">
                <thead>
                    <tr>
                        <th>Features</th>
                        <th>Traditional Programs</th>
                        <th>W Relocation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Cash Rebates</td>
                        <td><i class="fas fa-times"></i></td>
                        <td><i class="fas fa-check"></i></td>
                    </tr>
                    <tr>
                        <td>HR System Integration</td>
                        <td><i class="fas fa-times"></i></td>
                        <td><i class="fas fa-check"></i></td>
                    </tr>
                    <tr>
                        <td>Nationwide Coverage</td>
                        <td><i class="fas fa-check"></i></td>
                        <td><i class="fas fa-check"></i></td>
                    </tr>
                    <tr>
                        <td>Employee Portal</td>
                        <td>Limited</td>
                        <td>Comprehensive</td>
                    </tr>
                    <tr>
                        <td>Cost to Employer</td>
                        <td>High</td>
                        <td>Minimal</td>
                    </tr>
                    <tr>
                        <td>Implementation Time</td>
                        <td>2-3 Months</td>
                        <td>2-3 Weeks</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Calculator Section -->
    <section id="calculator" class="calculator-section">
        <div class="section-header">
            <h2>Relocation <span>Calculator</span></h2>
            <p>Estimate savings and benefits for your organization</p>
        </div>
        <div class="calculator-container">
            <div class="calculator-tabs">
                <button class="calc-tab-btn" data-calc="rebate">Rebate Calculator</button>
                <!-- <button class="calc-tab-btn" data-calc="roi">ROI Calculator</button> -->
            </div>
            <div class="calculator-content">
                <!-- Rebate Calculator -->
                <div class="calculator-pane active" id="rebate-calculator">
                    <form class="calc-form" id="rebateForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="salePrice">Home Sale Price</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                    <input type="number" id="salePrice" placeholder="e.g. 350000" min="50000" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="commission">Commission Rate</label>
                                <div class="select-wrapper">
                                    <select id="commission">
                                        <option value="3">3%</option>
                                        <option value="2.5">2.5%</option>
                                        <option value="2">2%</option>
                                        <option value="1.5">1.5%</option>
                                        <option value="1">1%</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="movingCosts">Estimated Moving Costs</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                    <input type="number" id="movingCosts" placeholder="e.g. 5000" min="0">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="closingCosts">Estimated Closing Costs</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                    <input type="number" id="closingCosts" placeholder="e.g. 8000" min="0">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="additional">Additional Expenses</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                    <input type="number" id="additional" placeholder="e.g. 2000" min="0">
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="button" id="calculateRebate" class="calc-btn">Calculate</button>
                            </div>
                        </div>
                    </form>
                    <div class="calc-results" id="rebateResults">
                        <!-- Results will be displayed here -->
                    </div>
                    <button id="toggleRebateTable" class="secondary-btn">View Rebate Table</button>
                    <div class="rebate-table" id="rebateTable">
                        <!-- Rebate table will be displayed here -->
                    </div>
                </div>
                
                <!-- ROI Calculator -->
                <div class="calculator-pane" id="roi-calculator">
                    <form class="calc-form" id="roiForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="employeeCount">Number of Relocations (Annual)</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-users"></i>
                                    <input type="number" id="employeeCount" placeholder="e.g. 25" min="1" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="avgHomeValue">Average Home Value</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-home"></i>
                                    <input type="number" id="avgHomeValue" placeholder="e.g. 350000" min="50000" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="currentCost">Current Cost Per Relocation</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                    <input type="number" id="currentCost" placeholder="e.g. 15000" min="0">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="retentionRate">Current Retention Rate (%)</label>
                                <div class="input-with-icon">
                                    <i class="fas fa-percentage"></i>
                                    <input type="number" id="retentionRate" placeholder="e.g. 85" min="0" max="100">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <button type="button" id="calculateROI" class="calc-btn">Calculate ROI</button>
                            </div>
                        </div>
                    </form>
                    <div class="calc-results" id="roiResults">
                        <!-- ROI Results will be displayed here -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Case Studies Section -->
	 <!-- <SuccessStories /> -->
   

    <!-- Testimonials Section -->
    <!-- <Testimonials /> -->

    <section id="demo" class="demo-section">
        <div class="demo-content">
            <h2>Ready to Transform Your Relocation Program?</h2>
            <p>Schedule a personalized demo to see how W Relocation can benefit your organization</p>
			<ContactForm />
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
        <div class="container">
            <div class="contact-info">
                <h2>Contact Us</h2>
                <div class="contact-details">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>777 S Federal Hwy<br>Fort Lauderdale, FL 33316</p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <p><a href="tel:9546497444">954.649.7444</a></p>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <p><a href="mailto:GWhiddon@wrelocation.com">GWhiddon@wrelocation.com</a></p>
                    </div>
                </div>
                <div class="social-links">
                    <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </section>
</Layout>

